@page

@model FakeFacebook.Dtos.BigViewModel


@{
}

<!DOCTYPE HTML>
<html lang="pl">


 <head>
     <meta name="description" content="Strona startowa WANDA" />
     <meta name="keywords" content="WANDA" />
     <meta charset="utf-8" />
     <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
     <title>WANDA</title>
     <link rel="stylesheet" href="~/css/Home/Index.css" />
     <script type="text/javascript" src="~/js/Index.js"></script>



 </head>





 <body >
     <div id="H-I-page">

         <nav>
             <div id="H-I-navigation">
                 <div id="H-I-title">
                     TEST
                 </div>

                 <div id="H-I-label1">Adres e-mail lub numer telefonu</div>
                 <div id="H-I-label2">
                     Hasło
                 </div>

                
                 @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                 {
                 


                   
                    
                    <input type="email" id="H-I-emailButton" name="Email" />




                    <div id="H-I-labelvalid">
                        @ViewBag.valid
                    </div>



                    <input type="password" id="H-I-passwordButton" name="Password" />






                     <div id="H-I-labelvalidPassword">
                         @ViewBag.validPass
                     </div>





                     <input type="submit" id="H-I-LoginButton" value="Zaloguj się">
                    

                 }


             </div>

         </nav>


         <main>

             <div id="H-I-label3"> Ostatnie logowanie </div>
             <div id="H-I-label4"> Kliknij swoje zdjęcie lub dodaj konto. </div>
             <div id="H-I-label5"> Utwórz nowe konto </div>
             <div id="H-I-label6"> To szybkie i proste. </div>

             <div id="H-I-SignUp">




                 @using (Html.BeginForm("Create", "Home", FormMethod.Post))
                 {


                  
                     <input type="text" name="Name" placeholder="Name" id="H-I-FirstNameButton" />

                    
                     <input type="text" name="Surname" placeholder="Surname" id="H-I-SurnameButton"/>


                   
                     <input type="email" name="Email" id="H-I-emailButton2" placeholder="E-mail" />


                     <input type="password" name="Password" id="H-I-passwordButton2" placeholder="Hasło" />



                     <div id="H-I-label7"> Data Urodzenia </div>
                    





                     <label for="H-I-Days"> </label>



                     <div id="H-I-label8"> Wybierz płeć </div>



                     <div id="H-I-MAN">
                         <input type="radio" value="Male" name="gender">
                         <label for="Male"> Mężczyzna </label>
                     </div>

                     <div id="H-I-WOMAN">

                         <input type="radio" value="Female" name="gender">

                         <label for="Female">Kobieta</label>
                     </div>

                     <input type="submit" id="H-I-SignUpButton" value="Zarejestruj się" />
                 }



             </div>





         </main>













         <script type="text/javascript" src="~/js/Index.js"></script>

     </div>
 </body>






</html>
